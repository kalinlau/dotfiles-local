# alias for local mac
command -v lsd &> /dev/null && alias ls='lsd --group-dirs first'
command -v htop &> /dev/null && alias top='htop'

[ -f ~/.fzf/fzf.bash ] && source ~/.fzf/fzf.bash

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/Users/liujialin/opt/miniconda3/bin/conda' 'shell.bash' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/Users/liujialin/opt/miniconda3/etc/profile.d/conda.sh" ]; then
        . "/Users/liujialin/opt/miniconda3/etc/profile.d/conda.sh"
    else
        export PATH="/Users/liujialin/opt/miniconda3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<

