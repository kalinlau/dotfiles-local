# --- path config ---

# `dircolors` is specific to GNU coreutils, mac don't have.
path_prepend "/usr/local/opt/coreutils/libexec/gnubin"
path_prepend "/usr/local/opt/binutils/bin"
path_prepend "/usr/local/opt/ncurses/bin"
path_prepend "/usr/local/opt/ruby/bin"
path_prepend "/usr/local/opt/sqlite/bin"

path_prepend "${HOME}/.iterm2"
path_prepend "/usr/local/opt/icu4c/bin"
path_prepend "/usr/local/opt/icu4c/sbin"
path_prepend "/usr/local/opt/m4/bin"
path_prepend "/usr/local/opt/gnu-getopt/bin"
# Add Homebrew's unversioned python in front of system version.
# make sure this comes in front of /usr/bin.
# Homebrew install at /usr/local/Cellar and create link to /usr/local/opt
[[ -d /usr/local/opt/python@3/libexec/bin ]] && path_prepend "/usr/local/opt/python@3/libexec/bin"
